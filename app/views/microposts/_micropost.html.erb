
<div class="item">
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user?(micropost.user) %>
    <%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content %>
  <% end %>

	<div>	
	<%= form_for([micropost, @comment]) do |f| %>
	<%= f.text_area :body, :placeholder => "Write a Comment..." %>
	<div><%= f.submit "Comment" %></div>
	<% end %>
	<% micropost.comments.each do |comment| %>
	<%= comment.body %>
	
	<% if signed_in? and comment.user_id == current_user.id %>
        <span><%= link_to 'delete', micropost_comment_path(@micropost, comment), :confirm => 'Are you sure?', :method => :delete, :class => "" %></span>
    <% end %>

	<% end %>
	</div>


</div>
