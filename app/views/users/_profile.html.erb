	<%= image_tag @user.avatar_url(:lavatar) if @user.avatar? %>
</ar>

<ar style="z-index:50;position:absolute;right:785px;margin-top:225px;margin-left:10px;width:176px;height:195px;">
	<% @user ||= current_user %>
	
	<span style="text-align:center;position:absolute;margin-top:10px;margin-left:8px;">
    <h1 style="color:white;"><%= @user.name %></h1>
  	</span>

    <span style="text-align:center;position:absolute;margin-top:165px;margin-left:3px;">
	<%= render 'follow_form' if signed_in? %>
	<%= link_to "Edit", edit_user_path(current_user), class: "bar", style: "position:absolute;width:168px;height:25px;" if @user == current_user %>
  	</span>

	<a href="<%= following_user_path(@user) %>" style="text-align:center;position:absolute;margin-left:5px;margin-top:110px;">
    <h1 id="following" class="stat" style="color:white;"><%= @user.followed_users.count %></h1><h5 style="color:white;">following</h5>
  	</a>


    <span style="text-align:center;position:absolute;margin-top:110px;margin-left:68px;">
    <h1 style="color:white;"><%= @user.microposts.count %></h1><h5 style="color:white;">posts</h5>
  	</span>

    <a href="<%= followers_user_path(@user) %>" style="text-align:center;position:absolute;margin-top:110px;margin-left:120px;">
    <h1 id="followers" class="stat" style="color:white;"><%= @user.followers.count %></h1><h5 style="color:white;">followers</h5>
  	</a>	
</ar>