
<ar style="z-index:50;position:absolute;right:240px;margin-top:20px;margin-left:10px;width:180px;height:400px;">
	<%= image_tag @user.image3_url(:tallavatar) if @user.image3? %>
</ar>
<ar style="z-index:50;position:absolute;right:420px;margin-top:20px;margin-left:10px;width:180px;height:400px;">
	<%= image_tag @user.image2_url(:tallavatar) if @user.image2? %>
</ar>
<ar style="z-index:50;position:absolute;right:600px;margin-top:20px;margin-left:10px;width:180px;height:400px;">
	<%= image_tag @user.image_url(:tallavatar) if @user.image? %>
</ar>
