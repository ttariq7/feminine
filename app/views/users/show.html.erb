<%= render 'shared/header' %>

<% @micropost  = current_user.microposts.build if signed_in? %>
<% if signed_in? %>

<section>
<div class="modal hide" id="entermodal" style="width:600px;height:300px;background-color:#953361;"><%= render 'shared/micropost_form' %></div>
<div class="modal hide" id="link" style="width:600px;height:500px;background-color:black;"><%= render 'shared/link_form' %></div>
<div class="modal hide" id="text" style="width:600px;height:500px;background-color:black;"><%= render 'shared/text_form' %></div>
<div class="modal hide" id="video" style="width:600px;height:500px;background-color:black;"><%= render 'shared/video_form' %></div>
<div class="modal hide" id="picture" style="width:600px;height:500px;background-color:black;"><%= render 'shared/picture_form' %></div>
</section>

<% end %>


<%= render 'profile' %>


<% if @user.microposts.any? %>

<div style="margin-top:450px;margin-right:240px;left:1%;display:block;" id="container">
  <%= render @microposts %>
</div>

<aside style="position:absolute;">
  <%= render @microposts.where(kyahai: "3")  %>
</div>

<% end %>










<script type="text/javascript">
$(function(){
  $('#container').masonry({

    itemSelector : '.item',
    columnWidth : 240;
  });
});
</script>