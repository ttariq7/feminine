<%= render 'shared/header' %>

<h1>Members Club</h1>

<% if signed_in? %>

<div style="margin-right:240px;">
<% @user ||= current_user %>
<% @users.each do |user| %>
  <div class="dir" style="z-index:50;">
  <%= link_to user do %>

        
		<span style="text-align:center;position:absolute;margin-top:10px;margin-left:8px;">
	    <h1 style="color:white;"><%= user.name %></h1>
	  	</span>

	
	<%= link_to "X", user, method: :delete, data: { confirm: "You sure?" },title: user.name %>

  <% end %>
  </div>
<% end %>
<% end %>
</div>


<br />


<script type="text/javascript">
$(function(){
  $('#container').masonry({

    itemSelector : '.dir',
    columnWidth : 180;
  });
});
</script>