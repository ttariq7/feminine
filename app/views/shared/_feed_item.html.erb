<div class="item">

<div data-toggle="modal" href="#<%= feed_item.id %>" style="cursor:pointer;cursor:hand;" >
  <span ><%= image_tag feed_item.image_url.to_s if feed_item.image? %></span>
  <% if feed_item.content? %>
  <div class="content"><%= feed_item.content %></div>
  <% end %>
</div>


  <barr style="position:absolute;width:50px;height:28px;text-align:center;"><h3>+</h3></barr>

  <span style="position:absolute;">
  <%= link_to feed_item.user do %>
  <barr style="position:absolute;margin-left:50px;width:108px;height:28px;text-align:center;"><h3><%= feed_item.user.name %></h3></barr>
  <% end %>
  </span>	

  <span style="position:absolute;">
  <%=  link_to vote_up_micropost_path(feed_item.id) do %> 
  <barr style="position:absolute;margin-left:158px;width:50px;height:28px;text-align:center;"><h3><%= feed_item.votes_for %></h3></barr>	
  <% end %>
  </span>

<div class="modal hide" id="<%= feed_item.id %>" >
	  <div class="content"><%= feed_item.content %></div>
</div>

</div>


