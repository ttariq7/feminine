<% @user ||= current_user %>
<div class="stats">
	
  <span href="<%= following_user_path(@user) %>" style="text-align:center;position:absolute;margin-left:5px;color:#CC337A;">
    <h1 id="following" class="stat">
      <%= @user.followed_users.count %>
    </h1>
    <h5>following</h5>
  </span>

  <span href="<%= followers_user_path(@user) %>" style="text-align:center;position:absolute;margin-left:114px;">
    <h1 id="followers" class="stat">
      <%= @user.followers.count %>
    </h1>
    <h5>followers</h5>
  </span>

</div>