</div>


<% if signed_in? %>
<%= link_to users_path do %><bar style="z-index:999;position:fixed;bottom:0px;right:0px;width:106px;height:40px;">
	<img src="/assets/search.png" alt="rss feed" style="opacity:0.7;margin-top:10px;width:20px;height:20px;"/>
	<h5 style="margin-top:-5px;">Search</h5>
</bar><% end %>

<bar href="#" class="btn-slide1" style="z-index:999;position:fixed;bottom:0px;left:0px;width:106px;height:40px;">
	<h5 style="margin-top:25px;">MENU</h5>
</bar>
<% end %>

<div style="position:fixed;z-index:99999;" id="panel1">
	
	
	<%= link_to root_path do %>
	<bar2 style="top:0px;width:200px;height:50px;border-bottom:1px solid #1d1d1d;"><p>Slough</p></bar2>
	<% end %>
	
	<%= link_to '/feed' do %>
	<bar2 style="top:0px;width:200px;height:50px;border-bottom:1px solid #1d1d1d;"><p>Following</p></bar2>
	<% end %>
	
	<%= link_to current_user do %>
	<bar2 style="top:0px;width:200px;height:50px;border-bottom:1px solid #1d1d1d;"><p>Profile</p></bar2>
	<% end %>
	
	<%= link_to tagged_url(:tag => current_user.name) do %>
	<bar2 style="top:0px;width:200px;height:50px;border-bottom:1px solid #1d1d1d;"><p>My Wall</p></bar2>
	<% end %>
	
	<%= link_to tagged_url(:tag => current_user.school) do %>
	<bar2 style="top:0px;width:200px;height:50px;border-bottom:1px solid #1d1d1d;"><p><%= h truncate(current_user.school, :length => 25) %></p></bar2>
	<% end %>
	
	<% @year = [current_user.school, current_user.schoolyear] %>
	
	<%= link_to tagged_url(:tag => @year) do %>
	<bar2 style="top:0px;width:200px;height:50px;border-bottom:1px solid #1d1d1d;"><p><%= raw h truncate(current_user.schoolyear, :length => 23) %></p></bar2>
	<% end %>
	
	<%= link_to signout_path, method: "delete" do %>
	<bar2 style="top:0px;width:200px;height:50px;border-bottom:1px solid #1d1d1d;"><p>Sign Out</p></bar2>
	<% end %>
	
	
</div>


<script type="text/javascript">
$(document).ready(function(){

	$(".btn-slide1").click(function(){
		$("#panel1").slideToggle("medium");
		$(this).toggleClass("active1"); return false;
	});


});
</script>